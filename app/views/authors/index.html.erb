<h1>Authors</h1>

<table class='table'>
  <thead class="table-light">
    <tr>
      <th>Name</th>
      <th>Email address</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <% if author.user == current_user %>
      <tr>
      <td><%= author.first_name %> <%= author.last_name %></td>
        <td><%= author.email_address %></td>
        <td><%= author.user_id %></td>
        <td><%= link_to 'Show', author, class: 'btn btn-outline-dark'  %></td>
        <td><%= link_to 'Edit', edit_author_path(author), class: 'btn btn-outline-dark'  %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-dark' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, class: 'btn btn-outline-dark'  %>
