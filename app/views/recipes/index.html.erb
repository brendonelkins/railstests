<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table class='table'>
  <thead class="table-light">
    <tr>
      <th>Recipe name</th>
      <th>Difficulty</th>
      <th>Comment</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.recipe_name %></td>
        <td><%= recipe.difficulty %></td>
        <td><%= recipe.comment %></td>
        <td><%= recipe.author_id %></td>
        <td><%= link_to 'Show', recipe, class: 'btn btn-outline-dark'  %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), class: 'btn btn-outline-dark'  %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-dark'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path, class: 'btn btn-outline-dark'  %>
